<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.example.gradyle.projekt.MainActivity">

    <Button
        android:id="@+id/bWeather"
        android:layout_width="230dp"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:alpha="0.7"
        android:text="@string/weather" />

    <Button
        android:id="@+id/bConverter"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/baboutApp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/bWeather"
        android:layout_weight="1"
        android:alpha="0.7"
        android:text="@string/temperature_converter" />

    <Button
        android:id="@+id/baboutApp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/bWeather"
        android:layout_toEndOf="@+id/bWeather"
        android:layout_weight="1"
        android:alpha="0.7"
        android:text="@string/about_app" />

    <Button
        android:id="@+id/bAboutUs"
        android:layout_width="171dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bWeather"
        android:layout_weight="1"
        android:alpha="0.7"
        android:text="@string/aboutUs" />

    <Button
        android:id="@+id/bContact"
        android:layout_width="177dp"
        android:layout_height="92dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bWeather"
        android:layout_marginEnd="3dp"
        android:layout_weight="1"
        android:alpha="0.7"
        android:text="@string/Contact" />

    <Button
        android:id="@+id/bWeatherSites"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bAboutUs"
        android:layout_weight="1"
        android:alpha="0.7"
        android:text="@string/best_weather_site" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="185dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/unnamed" />


</RelativeLayout>